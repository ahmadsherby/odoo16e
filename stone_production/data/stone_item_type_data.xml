<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="product_category_stones" model="product.category">
            <field name="name">Stone</field>
        </record>
        <record id="product_category_block" model="product.category">
            <field name="name">Block</field>
            <field name="parent_id" ref="product_category_stones"/>
        </record>
        <record id="item_type_block" model="stone.item.type">
            <field name="name">Block</field>
            <field name="code">BL</field>
            <field name="size" >volume</field>
            <field name="manual_insert" >1</field>
            <field name="item_default" >1</field>
            <field name="categ_id" ref="product_category_stones"/>
        </record>
        <record id="product_category_slab" model="product.category">
            <field name="name">Slab</field>
            <field name="parent_id" ref="product_category_stones"/>
        </record>
        <record id="item_type_slab" model="stone.item.type">
            <field name="name">Slab</field>
            <field name="code">SL</field>
            <field name="size" >surface</field>
            <field name="manual_insert" >1</field>
            <field name="categ_id" ref="product_category_slab"/>
        </record>
        <record id="product_category_tile" model="product.category">
            <field name="name">Tile</field>
            <field name="parent_id" ref="product_category_stones"/>
        </record>
        <record id="item_type_tile" model="stone.item.type">
            <field name="name">Tile</field>
            <field name="code">TL</field>
            <field name="size" >surface</field>
            <field name="manual_insert" >1</field>
            <field name="categ_id" ref="product_category_tile"/>
        </record>
        <record id="product_category_strip" model="product.category">
            <field name="name">Strip</field>
            <field name="parent_id" ref="product_category_stones"/>
        </record>
        <record id="item_type_strip" model="stone.item.type">
            <field name="name">Strip</field>
            <field name="code">ST</field>
            <field name="size" >surface</field>
            <field name="manual_insert" >1</field>
            <field name="categ_id" ref="product_category_strip"/>
        </record>
    </data>
</odoo>
