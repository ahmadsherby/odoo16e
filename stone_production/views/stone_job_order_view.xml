<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stone_job_order_form_view" model="ir.ui.view">
        <field name="name">stone.job.order.form.view</field>
        <field name="model">stone.job.order</field>
        <field name="arch" type="xml">
            <form string="Job Order">
                <header>
                    <field name="cut_status" widget="statusbar" statusbar_visible="new,under_cutting,completed"/>
                </header>
                <sheet>
                    <field name="job_order_status" invisible="1"/>
                    <field name="job_type" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-dark" attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="New" bg_color="bg-info" attrs="{'invisible': [('job_order_status', '!=', 'new')]}"/>
                    <widget name="web_ribbon" title="Under Converting" bg_color="bg-danger" attrs="{'invisible': [('job_order_status', '!=', 'under_converting')]}"/>
                    <widget name="web_ribbon" title="Convert Completed" bg_color="bg-info" attrs="{'invisible': [('job_order_status', '!=', 'convert_completed')]}"/>
                    <widget name="web_ribbon" title="Job Order Completed" bg_color="bg-success" attrs="{'invisible': [('job_order_status', '!=', 'job_completed')]}"/>
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-dark" attrs="{'invisible': [('job_order_status', '!=', 'cancel')]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" readonly="1" force_save="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Main Details">
                            <field name="item_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   attrs="{'readonly':[('cut_status', '!=', 'new')]}"
                                   domain="[('item_type_id', '=', item_type_id)]"/>
                            <field name="job_type_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   readonly="1" force_save="1"/>
                            <field name="item_type_id" readonly="1" force_save="1"/>
                            <field name="job_machine_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   domain="[('item_type_id', '=', item_type_id)]"
                                   attrs="{'readonly':[('cut_status', '!=', 'new')]}"/>
                            <field name="parent_id" readonly="1" force_save="1"/>
                        </group>
                        <group string="Extra Details">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="create_date" readonly="1" force_save="1"/>
                            <field name="item_type_size" invisble="1"/>
                            <label for="remain_size" />
                            <div clas="o_row">
                                <field name="remain_size" class="oe_inline"/>
                                <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Operation">
                            <group>
                                <group string="Cut Dimensions">
                                    <label for="cut_length"/>
                                    <div class="o_row" name="cut_length">
                                        <field name="cut_length" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_width" />
                                    <div class="o_row" name="cut_width">
                                        <field name="cut_width" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_height" attrs="{'invisible':[('item_type_size','!=', 'volume')]}"/>
                                    <div class="o_row" name="cut_height" attrs="{'invisible':[('item_type_size','!=', 'volume')]}">
                                        <field name="cut_height" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_thickness" attrs="{'invisible':[('item_type_size','in', ('volume', 'surface'))]}"/>
                                    <div class="o_row" name="cut_thickness" attrs="{'invisible':[('item_type_size','in', ('volume', 'surface'))]}">
                                        <field name="cut_thickness" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <b><label for="cut_size_value"/></b>
                                    <div class="o_row" name="cut_size_value">
                                        <field name="cut_size_value" class="oe_inline"/>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                                <group string="Final Dimensions">
                                    <label for="job_width" />
                                    <div class="o_row" name="job_width">
                                        <field name="job_width" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_length"/>
                                    <div class="o_row" name="job_length">
                                        <field name="job_length" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_height" attrs="{'invisible':[('item_type_size','!=', 'volume')]}"/>
                                    <div class="o_row" name="job_height" attrs="{'invisible':[('item_type_size','!=', 'volume')]}">
                                        <field name="job_height" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_thickness" attrs="{'invisible':[('item_type_size','in', ('volume', 'surface'))]}"/>
                                    <div class="o_row" name="job_thickness" attrs="{'invisible':[('item_type_size','in', ('volume', 'surface'))]}">
                                        <field name="job_thickness" class="oe_inline" attrs="{'readonly':[('cut_status', '=', ('completed', 'cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <b><label for="job_size_value"/></b>
                                    <div class="o_row" name="job_size_value">
                                        <field name="job_size_value" class="oe_inline"/>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="stone_job_order_tree_view" model="ir.ui.view">
        <field name="name">stone.job.order.tree.view</field>
        <field name="model">stone.job.order</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="item_id"/>
                <field name="job_type_id"/>
                <field name="job_machine_id" />
                <field name="create_date" readonly="1" force_save="1"/>
                <field name="job_type" invisible="1"/>
                <field name="cut_length" optional="hide" sum="cut_length"/>
                <field name="cut_width" optional="hide" sum="cut_width"/>
                <field name="cut_height" optional="hide" sum="cut_height"/>
                <field name="cut_thickness" optional="hide" sum="cut_thickness"/>
                <field name="cut_size_value" optional="show" sum="cut_size_value"/>
                <field name="remain_size" optional="show" sum="remain_size"/>
                <field name="job_size_value" optional="show" sum="job_size_value"/>
                <field name="cut_status" widget="badge" optional="show" decoration-info="cut_status == 'under_cutting'"
                       decoration-success="cut_status == 'completed'" decoration-muted="cut_status in ['new', 'cancel']" />
                <field name="job_order_status" widget="badge" optional="show" decoration-danger="cut_status == 'under_converting'" decoration-muted="cut_status == 'cancel'"
                       decoration-info="cut_status in ('new','convert_completed')" decoration-success="cut_status == 'job_completed'"/>
                <button name="action_start_convert_job_order" string="Start Slab Cut" icon="fa-refresh"
                        type="object" class="btn-warning rounded"
                        attrs="{'invisible':['|',('job_order_status','!=','new'),('cut_status','!=','completed')]}"
                        help="This Action will start set job order under converting"/>
                <button name="action_create_converted" string="Create Slab" icon="fa-plus" type="object" class="btn-info rounded"
                        attrs="{'invisible':['|',('job_order_status','!=','under_converting'),('cut_status','!=','completed')]}"
                        help="This Action will start create Job order with this block details"/>
                <button name="action_job_completed" string="Job Completed" icon="fa-check" type="object" class="btn-success rounded"
                        attrs="{'invisible':['|',('job_order_status','!=','convert_completed'),('cut_status','!=','completed')]}"
                        help="This Action will set job order as completed"/>
            </tree>
        </field>
    </record>
    <record id="stone_job_order_action" model="ir.actions.act_window">
        <field name="name">Job Orders</field>
        <field name="res_model">stone.job.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_job_order_tree_view"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('stone_production.stone_job_order_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('stone_production.stone_job_order_form_view')})]"/>
    </record>

    <!--Blocks-->
    <record id="stone_job_order_block_form_view" model="ir.ui.view">
        <field name="name">stone.job.order.block.form.view</field>
        <field name="model">stone.job.order</field>
        <field name="arch" type="xml">
            <form string="Job Order(Cutting Block)">
                <header>
                    <button name="action_start_cutting_job_order" string="Start Cut" type="object" icon="fa-wrench"
                            attrs="{'invisible': [('cut_status', '!=', 'new')]}" class="oe_highlight"/>
                    <button name="action_done_cutting_job_order" string="Done Cut" type="object" icon="fa-check"
                            attrs="{'invisible': ['|',('cut_status', '!=', 'under_cutting'),('job_type', '!=', 'block')]}" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            attrs="{'invisible': [('cut_status', 'not in', ('under_cutting', 'new'))]}" class="btn-danger"
                            confirm="Are you sure of cancel this Job Order!!!"/>
                    <button name="action_start_convert_job_order" string="Start Slab Cut" icon="fa-refresh"
                            type="object" class="btn-warning rounded"
                            attrs="{'invisible':['|',('job_order_status','!=','new'),('cut_status','!=','completed')]}"
                            help="This Action will start set job order under converting"/>
                    <button name="action_create_converted" string="Create Slab" icon="fa-plus" type="object" class="btn-info rounded"
                            attrs="{'invisible':['|',('job_order_status','!=','under_converting'),('cut_status','!=','completed')]}"
                            help="This Action will start create Job order with this block details"/>
                    <button name="action_job_completed" string="Job Completed" icon="fa-check" type="object" class="btn-success rounded"
                            attrs="{'invisible':['|',('job_order_status','!=','convert_completed'),('cut_status','!=','completed')]}"
                            help="This Action will set job order as completed"/>
                    <field name="cut_status" widget="statusbar" statusbar_visible="new,under_cutting,completed"/>
                </header>
                <sheet>
                    <field name="job_order_status" invisible="1"/>
                    <field name="job_type" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="cut_item_ids" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_open_items"
                                icon="fa-cubes"  type="object" attrs="{'invisible':[('cut_item_ids','=',[])]}">
                            <div class="o_field_widget o_stat_info">
                                <span>
                                    Cut Items
                                </span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-dark" attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="New" bg_color="bg-info" attrs="{'invisible': [('job_order_status', '!=', 'new')]}"/>
                    <widget name="web_ribbon" title="Under Converting" bg_color="bg-danger" attrs="{'invisible': [('job_order_status', '!=', 'under_converting')]}"/>
                    <widget name="web_ribbon" title="Convert Completed" bg_color="bg-info" attrs="{'invisible': [('job_order_status', '!=', 'convert_completed')]}"/>
                    <widget name="web_ribbon" title="Job Order Completed" bg_color="bg-success" attrs="{'invisible': [('job_order_status', '!=', 'job_completed')]}"/>
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-dark" attrs="{'invisible': [('job_order_status', '!=', 'cancel')]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" readonly="1" force_save="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Main Details">
                            <field name="item_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   attrs="{'readonly':[('cut_status', '!=', 'new')]}"
                                   domain="[('item_type_id', '=', item_type_id)]"/>
                            <field name="job_type_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   readonly="1" force_save="1"/>
                            <field name="item_type_id" readonly="1" force_save="1"/>
                            <field name="job_machine_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   domain="[('item_type_id', '=', item_type_id)]"
                                   attrs="{'readonly':[('cut_status', '!=', 'new')]}"/>
                            <field name="create_date" readonly="1" force_save="1"/>
                            <field name="item_type_size" invisble="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Cut Dimensions" attrs="{'invisible':[('cut_status','!=','completed')]}">
                            <label for="cut_length"/>
                            <div class="o_row" name="cut_length">
                                <field name="cut_length" required="1" class="oe_inline"
                                       attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                <field name="dimension_uom_id" readonly="1" force_save="1"/>
                            </div>
                            <label for="cut_width" />
                            <div class="o_row" name="cut_width">
                                <field name="cut_width" required="1" class="oe_inline"
                                       attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                <field name="dimension_uom_id" readonly="1" force_save="1"/>
                            </div>
                            <label for="cut_height"/>
                            <div class="o_row" name="cut_height">
                                <field name="cut_height" required="1" class="oe_inline"
                                       attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                <field name="dimension_uom_id" readonly="1" force_save="1"/>
                            </div>
                            <label for="cut_size_value"/>
                            <div class="o_row" name="cut_size_value">
                                <field name="cut_size_value" class="oe_inline"/>
                                <field name="type_size_uom_id" readonly="1" force_save="1"/>
                            </div>
                            <label for="cut_remain_size"/>
                            <div class="o_row" name="cut_remain_size">
                                <field name="cut_remain_size" class="oe_inline"/>
                                <field name="type_size_uom_id" readonly="1" force_save="1"/>
                            </div>
                        </group>
                        <group string="Item Details"  attrs="{'invisible':[('cut_status','=','completed')]}">
                            <field name="color_id" force_save="1"/>
                            <field name="length" force_save="1"/>
                            <field name="width" force_save="1"/>
                            <field name="height" force_save="1"/>
                            <field name="thickness" force_save="1"/>
                            <field name="thickness" force_save="1"/>
                            <label for="size_value" />
                            <div clas="o_row">
                                <field name="size_value" class="oe_inline"/>
                                <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                            <label for="remain_size" />
                            <div clas="o_row">
                                <field name="remain_size" class="oe_inline"/>
                                <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                            <field name="choice_id" readonly="1" force_save="1"/>
                            <field name="remarks" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Operation">
                            <group>
                                <group string="Cut Dimensions" attrs="{'invisible':[('cut_status','=','completed')]}">
                                    <field name="item_type_size" readonly="1" force_save="1"/>
                                    <label for="cut_length"/>
                                    <div class="o_row" name="cut_length">
                                        <field name="cut_length" required="1" class="oe_inline"
                                               attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_width" />
                                    <div class="o_row" name="cut_width">
                                        <field name="cut_width" required="1" class="oe_inline"
                                               attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_height"/>
                                    <div class="o_row" name="cut_height">
                                        <field name="cut_height" required="1" class="oe_inline"
                                               attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <b><label for="cut_size_value"/></b>
                                    <div class="o_row" name="cut_size_value">
                                        <field name="cut_size_value" class="oe_inline"/>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                                <group string="Convert Dimensions" attrs="{'invisible':['|',('cut_status','!=','completed'),
                                                                                    ('job_order_status','!=','under_converting')]}">
                                    <field name="conv_type_size" readonly="1" force_save="1"/>
                                    <label for="conv_length"/>
                                    <div class="o_row" name="conv_length">
                                        <field name="conv_length" class="oe_inline"
                                               attrs="{'readonly':[('job_order_status', 'not in', ('under_converting','new'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="conv_width" />
                                    <div class="o_row" name="conv_width">
                                        <field name="conv_width" class="oe_inline"
                                               attrs="{'readonly':[('job_order_status', 'not in', ('under_converting','new'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="conv_thickness"/>
                                    <div class="o_row" name="conv_thickness">
                                        <field name="conv_thickness" class="oe_inline"
                                               attrs="{'readonly':[('job_order_status', 'not in', ('under_converting','new'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="conv_size_value"/>
                                    <div class="o_row" name="conv_size_value">
                                        <field name="conv_size_value" class="oe_inline"/>
                                        <field name="conv_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <field name="conv_num_of_pieces"  attrs="{'readonly':[('job_order_status', 'not in', ('under_converting','new'))]}"/>
                                    <label for="conv_total_size"/>
                                    <div class="o_row" name="conv_total_size">
                                        <field name="conv_total_size" class="oe_inline"/>
                                        <span class="oe_inline">PC/</span>
                                        <field name="conv_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                                <group string="Final Dimensions">
                                    <label for="job_length"/>
                                    <div class="o_row" name="job_length">
                                        <field name="job_length" class="oe_inline"
                                               attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_width" />
                                    <div class="o_row" name="job_width">
                                        <field name="job_width" class="oe_inline"
                                               attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_height" />
                                    <div class="o_row" name="job_height">
                                        <field name="job_height" class="oe_inline"
                                               attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <b><label for="job_size_value"/></b>
                                    <div class="o_row" name="job_size_value">
                                        <field name="job_size_value" class="oe_inline"/>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Item Details" attrs="{'invisible':[('cut_status','!=','completed')]}">
                            <group string="Item Details" >
                                <field name="color_id" force_save="1"/>
                                <field name="length" force_save="1"/>
                                <field name="width" force_save="1"/>
                                <field name="height" force_save="1"/>
                                <field name="thickness" force_save="1"/>
                                <field name="thickness" force_save="1"/>
                                <label for="size_value" />
                                <div clas="o_row">
                                    <field name="size_value" class="oe_inline"/>
                                    <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                                </div>
                                <label for="remain_size" />
                                <div clas="o_row">
                                    <field name="remain_size" class="oe_inline"/>
                                    <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                                </div>
                                <field name="choice_id" readonly="1" force_save="1"/>
                                <field name="remarks" readonly="1" force_save="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="stone_job_order_action_block" model="ir.actions.act_window">
        <field name="name">Blocks Cutting Lines</field>
        <field name="res_model">stone.job.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_job_order_tree_view"/>
        <field name="domain">[('job_type','=', 'block')]</field>
        <field name="context">{'default_job_type': 'block'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('stone_production.stone_job_order_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('stone_production.stone_job_order_block_form_view')})]"/>
    </record>
    <menuitem id="stone_job_order_menu_block"
              parent="stone_production.stone_job_order_menu_root"
              action="stone_production.stone_item_block_action" sequence="1"/>
    <menuitem id="stone_job_order_menu_block_lines"
              parent="stone_production.stone_job_order_menu_root"
              action="stone_job_order_action_block" sequence="2"/>
    <!--Slab-->
    <record id="stone_job_order_slab_form_view" model="ir.ui.view">
        <field name="name">stone.job.order.form.view</field>
        <field name="model">stone.job.order</field>
        <field name="arch" type="xml">
            <form string="Job Order(Cutting Slab)">
                <header>
                    <button name="action_start_convert_job_order" string="Start Slab Cut" icon="fa-refresh"
                            type="object" class="btn-warning rounded"
                            attrs="{'invisible':['|',('job_order_status','!=','new'),('cut_status','!=','completed')]}"
                            help="This Action will start set job order under converting"/>
                    <button name="action_create_converted" string="Create Slab" icon="fa-plus" type="object" class="btn-info rounded"
                            attrs="{'invisible':['|',('job_order_status','!=','under_converting'),('cut_status','!=','completed')]}"
                            help="This Action will start create Job order with this block details"/>
                    <button name="action_job_completed" string="Job Completed" icon="fa-check" type="object" class="btn-success rounded"
                            attrs="{'invisible':['|',('job_order_status','!=','convert_completed'),('cut_status','!=','completed')]}"
                            help="This Action will set job order as completed"/>
                    <field name="cut_status" widget="statusbar" statusbar_visible="new,under_cutting,completed"/>
                </header>
                <sheet>
                    <field name="job_order_status" invisible="1"/>
                    <field name="job_type" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-dark" attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="New" bg_color="bg-info" attrs="{'invisible': [('job_order_status', '!=', 'new')]}"/>
                    <widget name="web_ribbon" title="Under Converting" bg_color="bg-danger" attrs="{'invisible': [('job_order_status', '!=', 'under_converting')]}"/>
                    <widget name="web_ribbon" title="Convert Completed" bg_color="bg-info" attrs="{'invisible': [('job_order_status', '!=', 'convert_completed')]}"/>
                    <widget name="web_ribbon" title="Job Order Completed" bg_color="bg-success" attrs="{'invisible': [('job_order_status', '!=', 'job_completed')]}"/>
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-dark" attrs="{'invisible': [('job_order_status', '!=', 'cancel')]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" readonly="1" force_save="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Main Details">
                            <field name="parent_id" required="1" force_save="1"
                                   domain="[('job_type','=','block')]"/>
                            <field name="item_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   readonly="1" force_save="1" domain="[('item_type_id', '=', item_type_id)]"/>
                            <field name="job_type_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   readonly="1" force_save="1"/>
                            <field name="item_type_id" readonly="1" force_save="1"/>
                            <field name="job_machine_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   domain="[('item_type_id', '=', item_type_id)]"
                                   attrs="{'readonly':[('cut_status', '!=', 'new')]}"/>
                        </group>
                        <group string="Item Details">
                            <field name="color_id" force_save="1"/>
                            <field name="length" force_save="1"/>
                            <field name="width" force_save="1"/>
                            <field name="height" force_save="1"/>
                            <field name="thickness" force_save="1"/>
                            <field name="thickness" force_save="1"/>
                            <label for="size_value" />
                            <div clas="o_row">
                                <field name="size_value" class="oe_inline"/>
                                <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                            <field name="num_of_pieces" readonly="1" force_save="1"/>
                            <label for="remain_size" />
                            <div clas="o_row">
                                <field name="remain_size" class="oe_inline"/>
                                <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                            <field name="remarks" force_save="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Extra Details">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="create_date" readonly="1" force_save="1"/>
                            <field name="item_type_size" invisble="1"/>
                            <label for="remain_size" />
                            <div clas="o_row">
                                <field name="remain_size" class="oe_inline"/>
                                <field name="item_size_uom_id" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Cut Details">
                            <group>
                                <group string="Cut Dimensions">
                                    <label for="cut_length"/>
                                    <div class="o_row" name="cut_length">
                                        <field name="cut_length" class="oe_inline" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_width" />
                                    <div class="o_row" name="cut_width">
                                        <field name="cut_width" class="oe_inline" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_thickness"/>
                                    <div class="o_row" name="cut_thickness">
                                        <field name="cut_thickness" class="oe_inline" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="cut_size_value"/>
                                    <div class="o_row" name="cut_size_value">
                                        <field name="cut_size_value" class="oe_inline"/>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <field name="cut_num_of_pieces"/>
                                    <label for="cut_total_size"/>
                                    <div class="o_row" name="cut_total_size">
                                        <field name="cut_total_size" class="oe_inline"/>
                                        <span class="oe_inline">PC/</span>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                                <group string="Final Dimensions">
                                    <label for="job_length"/>
                                    <div class="o_row" name="job_length">
                                        <field name="job_length" class="oe_inline" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_width" />
                                    <div class="o_row" name="job_width">
                                        <field name="job_width" class="oe_inline" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <label for="job_thickness" />
                                    <div class="o_row" name="job_thickness" attrs="{'invisible':[('item_type_size','in', ('volume', 'surface'))]}">
                                        <field name="job_thickness" class="oe_inline" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                        <field name="dimension_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                    <b><label for="job_size_value"/></b>
                                    <div class="o_row" name="job_size_value">
                                        <field name="job_size_value" class="oe_inline"/>
                                        <field name="type_size_uom_id" readonly="1" force_save="1"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="choice_id" required="1" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                    <field name="choice_id" attrs="{'readonly':[('cut_status', 'in', ('completed','cancel'))]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="stone_job_order_action_slab" model="ir.actions.act_window">
        <field name="name">Slab Cutting</field>
        <field name="res_model">stone.job.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_job_order_tree_view"/>
        <field name="domain">[('job_order_status','in',('new', 'convert_completed')),('cut_status','in',('new', 'completed')),('job_type','=', 'block')]</field>
        <field name="context">{'default_job_type': 'block'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('stone_production.stone_job_order_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('stone_production.stone_job_order_block_form_view')})]"/>
    </record>
    <menuitem id="stone_job_order_menu_slab"
              parent="stone_production.stone_job_order_menu_root"
              action="stone_job_order_action_slab" sequence="3"/>

