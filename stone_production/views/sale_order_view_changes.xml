<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stone_production_view_order_form_inherit" model="ir.ui.view">
            <field name="name">stone.production.sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="before">
                    <field name="item_type_id" optional="show" options="{'no_create': 1, 'no_create_edit': 1}" attrs="{'readonly': [('product_updatable', '=', False)]}"/>
                    <field name="item_color_id" optional="show" attrs="{'required':[('item_type_id','!=',False)],
                    'readonly': [('product_updatable', '=', False)]}" options="{'no_create': 1, 'no_create_edit': 1}"/>
                    <field name="item_pallet_id" optional="show" attrs="{'required':[
                    ('item_type_id', 'in', (%(stone_production.item_type_tile)d,%(stone_production.item_type_strip)d))],
                    'readonly': [('product_updatable', '=', False)]}" options="{'no_create': 1, 'no_create_edit': 1}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_template_id']" position="attributes">
                    <attribute name="options">{'no_create': 1, 'no_create_edit': 1}</attribute>
                    <attribute name="domain">[('qty_available', '&gt;', 0),('item_type_id', '=', item_type_id),('color_id', '=', item_color_id),
                        ('pallet_id', '=', item_pallet_id),('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': 1, 'no_create_edit': 1}</attribute>
                    <attribute name="domain">[('qty_available', '&gt;', 0),('item_type_id', '=', item_type_id),('color_id', '=', item_color_id),
                        ('pallet_id', '=', item_pallet_id),('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="attributes">
                    <attribute name="attrs">{'readonly':[('item_type_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="before">
                    <field name="length" readonly="1" force_save="1" optional="hide"/>
                    <field name="width" readonly="1" force_save="1" optional="hide"/>
                    <field name="height" readonly="1" force_save="1" optional="hide"/>
                    <field name="thickness" readonly="1" force_save="1" optional="hide"/>
                    <field name="available_pieces" optional="show"/>
                    <field name="sale_pieces"  attrs="{'required':[('item_type_id','!=',False)],
                    'readonly': [('product_updatable', '=', False)]}" optional="show"/>
                    <field name="piece_size" readonly="1" force_save="1" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>