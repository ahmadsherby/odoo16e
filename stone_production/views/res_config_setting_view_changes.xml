<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stone_production_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">stone_production.res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block stone_production_div" data-string="Stone Production"
                         string="Stone Production" data-key="stone_production" groups="base.group_system">
                        <h2>Stone Production</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane stone_production_settings">
                                    <label for="stone_finished_good_loc_id" class="o_light_label"/>
                                    <span class="fa fa-lg fa-map"/>
                                    <div class="text-muted">
                                        Sets a location to be used on update pieces of the used product on all types except Blocks.
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <field name="stone_finished_good_loc_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>