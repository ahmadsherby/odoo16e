<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stone_item_form_view" model="ir.ui.view">
        <field name="name">stone.item.form.view</field>
        <field name="model">stone.item</field>
        <field name="arch" type="xml">
            <form string="Item">
                <header>
                    <button name="action_block_cut" string="Start Block Cut" icon="fa-wrench" type="object" class="btn-warning rounded"
                            attrs="{'invisible':['|','|',('state','!=','product'),('cut_status','not in',('new', 'cutting_completed')),('item_type_id','!=', %(stone_production.item_type_block)d)]}"
                            help="This Action will start create Job order with this block details"/>
                    <button name="action_slab_cut" string="Start Slab Cut" icon="fa-wrench" type="object" class="btn-warning rounded"
                            attrs="{'invisible':['|','|',('state','!=','product'),('cut_status','not in',('new', 'cutting_completed')),('item_type_id','!=', %(stone_production.item_type_slab)d)]}"
                            help="This Action will start create Job order with this block details"/>
                    <button name="create_product" string="Create Product" states="draft"
                            icon="fa-plus" type="object" class="oe_highlight"/>
                    <button name="action_item_completed" string="Cutting Completed" attrs="{'invisible':[('cut_status','!=', 'cutting_completed')]}"
                            icon="fa-check" type="object" class="oe_highlight"/>
                    <field name="cut_status" widget="statusbar" statusbar_visible="new,under_cutting,cutting_completed,item_completed"/>
                </header>
                <sheet>
                    <field name="state" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="job_order_ids" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="open_orders"
                                icon="fa-list-ul"  type="object" attrs="{'invisible':[('job_order_ids','=',[])]}">
                            <div class="o_field_widget o_stat_info">
                                <span>
                                    Job Orders
                                </span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Draft"
                            bg_color="bg-info"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <widget name="web_ribbon" title="Product Created"
                            bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=', 'product')]}"/>
                    <field name="after_save" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item Code"/>
                        <h1>
                            <div class="d-flex">
                                <field class="oe_read_only text-break" name="name" readonly="1" force_save="1"/>
                                <field class="oe_edit_only" name="code_compute"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Main Details">
                            <field name="item_type_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   domain="[('manual_insert', '=', True)]"
                                   attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                            <field name="type_size" invisible="1"/>
                            <field name="source_id" domain="[('type_ids','in',item_type_id)]"
                                   options="{'no_create': 1, 'no_create_edit': 1}"
                                   attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                            <field name="color_ids" invisible="1"/>
                            <field name="color_id" domain="[('id','in',color_ids)]"  options="{'no_create': 1, 'no_create_edit': 1}"
                                   attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                            <field name="choice_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                   attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                            <field name="remarks" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="product_id" readonly="1" force_save="1" attrs="{'invisible':[('product_id','=',False)]}"/>
                            <field name="product_tmpl_id" readonly="1" force_save="1" attrs="{'invisible':[('product_id','=',False)]}"/>
                        </group>
                        <group string="Dimensions">
                            <label for="length"/>
                            <div class="o_row" name="length">
                                <field name="length" class="oe_inline" required="1"/>
                                <field name="dimension_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <label for="width" />
                            <div class="o_row" name="width">
                                <field name="width" class="oe_inline" required="1"/>
                                <field name="dimension_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <label for="height" attrs="{'invisible':[('type_size','!=', 'volume')]}"/>
                            <div class="o_row" name="height" attrs="{'invisible':[('type_size','!=', 'volume')]}">
                                <field name="height" class="oe_inline" attrs="{'required':[('type_size','=', 'surface')]}"/>
                                <field name="dimension_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <label for="thickness" attrs="{'invisible':[('type_size','!=', 'surface')]}"/>
                            <div class="o_row" name="thickness" attrs="{'invisible':[('type_size','!=', 'surface')]}">
                                <field name="thickness" class="oe_inline"/>
                                <field name="dimension_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <label for="size_value" style="border-top:1 solid gray;"/>
                            <div class="o_row" name="size_value">
                                <field name="size_value" class="oe_inline"/>
                                <field name="type_size_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <label for="cut_size" style="border-top:1 solid gray;"/>
                            <div class="o_row" name="cut_size">
                                <field name="cut_size" class="oe_inline" readonly="1" force_save="1"/>
                                <field name="type_size_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <label for="remain_size"/>
                            <div class="o_row" name="remain_size">
                                <field name="remain_size" class="oe_inline" readonly="1" force_save="1"/>
                                <field name="type_size_uom_name" readonly="1" force_save="1"/>
                            </div>
                            <field name="cost" readonly="1" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group string="Pieces">
                            <field name="num_of_pieces"
                                   attrs="{'readonly':['|',('item_type_id', '=', %(stone_production.item_type_block)d),('state', '!=', 'draft')]}"/>
                            <b><label for="total_size"/></b>
                            <div class="o_row" name="total_size">
                                <field name="total_size" class="oe_inline"/>
                                <field name="type_size_uom_name" readonly="1" force_save="1"/>
                            </div>
                        </group>
                        <group string="Other Details">
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="parent_id" readonly="1" force_save="1"/>
                            <field name="cut_job_order_id" readonly="1" force_save="1" attrs="{'invisible':[('cut_job_order_id','=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="stone_item_tree_view" model="ir.ui.view">
        <field name="name">stone.item.tree.view</field>
        <field name="model">stone.item</field>
        <field name="arch" type="xml">
            <tree string="Item Types">
                <field name="after_save" invisible="1"/>
                <field name="code_compute" invisible="1"/>
                <field name="name"/>
                <field name="item_type_id" optional="show" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="parent_id" optional="hide" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="cut_job_order_id" optional="hide" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="type_size" invisible="1"/>
                <field name="source_id" optional="show" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="color_ids" invisible="1"/>
                <field name="color_id" optional="show" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="choice_id" optional="show" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="remarks" optional="hide" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="ballet_id" optional="hide" attrs="{'readonly':['|',('after_save', '=', True),('state', '!=', 'draft')]}"/>
                <field name="length" optional="hide"/>
                <field name="width" optional="hide"/>
                <field name="height" optional="hide"/>
                <field name="thickness" optional="hide"/>
                <field name="size_value" sum="size_value"/>
                <field name="num_of_pieces" sum="num_of_pieces"/>
                <field name="total_size" sum="total_size"/>
                <field name="cut_size" sum="cut_size"/>
                <field name="remain_size" sum="remain_size"/>
                <field name="cost" sum="cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" optional="show" widget="badge"
                       decoration-info="state == 'draft'" decoration-success="state == 'product'"/>
                <field name="cut_status" optional="show" widget="badge" decoration-info="state == ('new', 'cutting_completed')"
                       decoration-warning="state == 'under_cutting'" decoration-success="state == 'item_completed'"/>
                <button name="action_block_cut" string="Start Block Cut" icon="fa-wrench" type="object" class="btn-warning rounded"
                        attrs="{'invisible':['|','|',('state','!=','product'),('cut_status','not in',('new', 'cutting_completed')),('item_type_id','!=', %(stone_production.item_type_block)d)]}"
                        help="This Action will start create Job order with this block details"/>
            </tree>
        </field>
    </record>
    <record id="stone_item_search_view" model="ir.ui.view">
        <field name="name">stone.item.search.view</field>
        <field name="model">stone.item</field>
        <field name="arch" type="xml">
            <search string="Search Stone Item">
                <field name="name" string="Name"/>
                <field name="item_type_id" />
                <field name="source_id" />
                <field name="color_id" />
                <field name="company_id" groups="base.group_multi_company"/>
                <filter string="Block" name="block" domain="[('item_type_id','=',%(stone_production.item_type_block)d)]" />
                <filter string="Slab" name="slab" domain="[('item_type_id','=',%(stone_production.item_type_slab)d)]" />
                <filter string="Tile" name="tile" domain="[('item_type_id','=',%(stone_production.item_type_tile)d)]" />
                <filter string="Strip" name="strip" domain="[('item_type_id','=',%(stone_production.item_type_strip)d)]" />
                <separator/>
                <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active items"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive items"/>
                <group string="Group By">
                    <filter string="Company" name="company" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Item Type" name="group_item_type" domain="[]" context="{'group_by':'item_type_id'}"/>
                    <filter string="Item Color" name="group_item_color" domain="[]" context="{'group_by':'color_id'}"/>
                    <filter string="Item Source" name="group_item_source" domain="[]" context="{'group_by':'source_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="stone_item_action" model="ir.actions.act_window">
        <field name="name">Items</field>
        <field name="res_model">stone.item</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_item_tree_view"/>
        <field name="context">{'search_default_group_item_type':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add New Item
            </p>
        </field>
    </record>
    <menuitem id="stone_item_menu" name="Items"
              parent="stone_production.stone_production_root"
              action="stone_item_action" sequence="2"/>
    <!--Block Action-->
    <record id="stone_item_block_action" model="ir.actions.act_window">
        <field name="name">Block Cutting</field>
        <field name="res_model">stone.item</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_item_tree_view"/>
        <field name="domain">[('item_type_id.name','=','Block'),('state','=','product'),
            ('cut_status','in',('new','under_cutting' ,'cutting_completed'))]</field>
    </record>
</odoo>
