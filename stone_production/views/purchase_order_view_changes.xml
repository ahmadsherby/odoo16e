                           context="{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom,
                                      'company_id': parent.company_id}" force_save="1" options="{'no_create': 1, 'no_create_edit': 1}"/>

                    <field name="item_type_id" readonly="1" force_save="1" optional="hide"
