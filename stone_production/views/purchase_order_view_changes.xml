<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stone_production_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">stone.production.purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object"  name="open_po_new_products"
                            class="oe_stat_button"
                            icon="fa-plus-circle" >
                        <field name="stone_production_product_ids" invisible="1"/>
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="stone_production_product_count"/></span>
                            <span class="o_stat_text">New Products</span>
                        </div>
                    </button>
                    <button type="object"  name="action_add_landed_cost"
                            class="oe_stat_button"
                            icon="fa-money" attrs="{'invisible':['|',('state','=','draft'),('stone_purchase_type','=','local')]}">
                        <div class="o_field_widget o_stat_info">
                            <field name="landed_cost_bill_ids" invisible="1"/>
                            <span class="o_stat_value"><field name="landed_cost_bill_count"/></span>
                            <span class="o_stat_text">Laded Costs</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="stone_purchase_type" attrs="{'readonly': [('state','!=','draft')]}"/>
                </xpath>
                <xpath expr="//page[@name='products']//field" position="before">
                    <button name="action_generate_product_lines" string="Generate Lines"
                            class="btn btn-info" icon="fa-cogs" type="object"
                            attrs="{'invisible': ['|',('state', '!=', 'draft'),('stone_production_product_ids','=',[])]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('state', 'in', ('done', 'cancel')),('stone_production_product_ids','=',[])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="length" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="width" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="height" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="thickness" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_qty']" position="replace">
                    <field name="product_qty" attrs="{'readonly': ['|',('item_type_id', '!=', False),('product_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_qty']" position="before">
                    <!--  'readonly':[('item_type_id','=',%(stone_production.item_type_block)d)],-->
                    <field name="num_of_pieces" force_save="1" optional="show" readonly="1"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="piece_size" readonly="1" force_save="1" optional="show"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="replace">
                    <!--Only to remove domain attrs-->
                    <field name="product_id"
                           attrs="{'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))],
                                    'required': [('display_type', '=', False)],}"
                           context="{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom,
                                      'company_id': parent.company_id}" force_save="1" options="{'no_create': 1, 'no_create_edit': 1}"/>

                    <field name="item_type_id" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="color_id" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="pallet_id" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]}"/>
                    <field name="choice_id" readonly="1" force_save="1" optional="hide"
                           attrs="{'column_invisible':[('parent.stone_production_product_ids', '=', [])]} "/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>