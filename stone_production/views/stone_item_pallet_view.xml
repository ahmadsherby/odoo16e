<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stone_item_pallet_form_view" model="ir.ui.view">
        <field name="name">stone.item.pallet.form.view</field>
        <field name="model">stone.item.pallet</field>
        <field name="arch" type="xml">
            <form string="Item Pallet">
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item Pallet"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" placeholder="e.g. Block"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="stone_item_pallet_tree_view" model="ir.ui.view">
        <field name="name">stone.item.pallet.tree.view</field>
        <field name="model">stone.item.pallet</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Item Pallets">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" readonly="1" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="stone_item_pallet_action" model="ir.actions.act_window">
        <field name="name">Item Pallet</field>
        <field name="res_model">stone.item.pallet</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_item_pallet_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add New Type
            </p>
        </field>
    </record>
    <menuitem id="stone_item_pallet_menu" name="Item Pallet"
              parent="stone_production.stone_production_config_item"
              action="stone_item_pallet_action" sequence="4"/>
    <data noupdate="1">
        <!-- Shareable Records -->
        <record model="ir.rule" id="stone_item_pallet_shared_company_rule">
            <field name="name">Stone Item Pallet: multi-company</field>
            <field name="model_id" ref="model_stone_item_pallet"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
            </field>
        </record>
    </data>
</odoo>