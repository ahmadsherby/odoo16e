<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stone_job_order_machine_form_view" model="ir.ui.view">
        <field name="name">stone.job.order.machine.form.view</field>
        <field name="model">stone.job.order.machine</field>
        <field name="arch" type="xml">
            <form string="Job Order Machine">
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                name="open_orders"
                                icon="fa-list-ul"
                                type="object">
                            <div class="o_field_widget o_stat_info">
                                <span>
                                    Orders
                                </span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="item_type_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stone_job_order_machine_tree_view" model="ir.ui.view">
        <field name="name">stone.job.order.machine.tree.view</field>
        <field name="model">stone.job.order.machine</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Job Order Machine">
                <field name="name"/>
                <field name="item_type_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="stone_job_order_machine_action" model="ir.actions.act_window">
        <field name="name">Job Order Machine</field>
        <field name="res_model">stone.job.order.machine</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_job_order_machine_tree_view"/>
    </record>

    <menuitem id="stone_job_order_machine_menu" name="Job Order Machine"
              parent="stone_production.stone_production_config_order"
              action="stone_job_order_machine_action" sequence="2"/>
</odoo>