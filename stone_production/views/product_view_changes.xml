<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="item_id" readonly="1" force_save="1"/>
                <field name="item_type_id" readonly="1" force_save="1"/>
                <field name="source_id" readonly="1" force_save="1"/>
                <field name="choice_id" readonly="1" force_save="1"/>
                <field name="remarks" readonly="1" force_save="1"/>
                <field name="pallet_id" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//group[@name='group_lots_and_weight']//div" position="after">
                <label for="stone_size_eq"/>
                <div class="o_row" name="size" width="2">
                    <field name="stone_size_eq" class="oe_inline"/>
                    <field name="piece_size_uom_name" readonly="1" force_save="1"/>
                </div>

                <label for="length" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                    <field name="length" class="oe_inline"/>
                    <field name="dimension_uom_id"/>
                </div>
                <label for="width" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                    <field name="width" class="oe_inline"/>
                    <field name="dimension_uom_id" readonly="1" force_save="1"/>
                </div>
                <label for="height" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                    <field name="height" class="oe_inline"/>
                    <field name="dimension_uom_id" readonly="1" force_save="1"/>
                </div>
                <label for="thickness" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                    <field name="thickness" class="oe_inline"/>
                    <field name="dimension_uom_id" readonly="1" force_save="1"/>
                </div>
                <field name="num_of_pieces" readonly="1" force_save="1"/>
                <label for="piece_size"/>
                <div class="o_row" name="piece_size">
                    <field name="piece_size" class="oe_inline" readonly="1" force_save="1"/>
                    <field name="piece_size_uom_name" readonly="1" force_save="1"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
