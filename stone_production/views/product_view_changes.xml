<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stone_production_product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="item_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="item_type_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="color_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="source_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="choice_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="remarks" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="pallet_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="generated_po_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <field name="item_vendor_id" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <button name="action_create_item" string="Create Item"  icon="fa-plus" type="object" class="btn-info rounded"
                        attrs="{'invisible':['|',('item_type_id','=',False),('item_id','!=',False)]}"
                        groups="stone_production.group_stone_production_product_create_item"/>
            </xpath>
            <xpath expr="//group[@name='group_lots_and_weight']//div" position="after">
                <label for="stone_size_eq" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="size" width="2" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="stone_size_eq" class="oe_inline"/>
                    <field name="piece_size_uom_name" readonly="1" force_save="1"/>
                </div>
                <label for="length" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="length" class="oe_inline"/>
                    <field name="dimension_uom_name" readonly="1" force_save="1"/>
                </div>
                <label for="width" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="width" class="oe_inline"/>
                    <field name="dimension_uom_name" readonly="1" force_save="1"/>
                </div>
                <label for="height" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="height" class="oe_inline"/>
                    <field name="dimension_uom_name" readonly="1" force_save="1"/>
                </div>
                <label for="thickness" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="weight" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="thickness" class="oe_inline"/>
                    <field name="dimension_uom_name" readonly="1" force_save="1"/>
                </div>
                <field name="num_of_pieces" readonly="1" force_save="1" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <label for="piece_size" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="piece_size" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="piece_size" class="oe_inline" readonly="1" force_save="1"/>
                    <field name="piece_size_uom_name" readonly="1" force_save="1"/>
                </div>
                <label for="item_total_size" attrs="{'invisible':[('item_type_id','=',False)]}"/>
                <div class="o_row" name="piece_size" attrs="{'invisible':[('item_type_id','=',False)]}">
                    <field name="item_total_size" class="oe_inline" readonly="1" force_save="1"/>
                    <field name="piece_size_uom_name" readonly="1" force_save="1"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="item_total_cost" readonly="1" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible':[('item_type_id','=',False)]}"/>
            </xpath>
        </field>
    </record>
    <record id="stone_production_product_template_tree_view_inherit" model="ir.ui.view">
        <field name="name">stone.production.product.template.common.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="item_id" readonly="1" force_save="1" optional="hide"/>
                <field name="item_type_id" readonly="1" force_save="1" optional="show"/>
                <field name="color_id" readonly="1" force_save="1" optional="show"/>
                <field name="source_id" readonly="1" force_save="1" optional="hide"/>
                <field name="choice_id" readonly="1" force_save="1" optional="hide"/>
                <field name="remarks" readonly="1" force_save="1" optional="hide"/>
                <field name="pallet_id" readonly="1" force_save="1" optional="hide"/>
                <field name="stone_size_eq" optional="hide"/>
                <field name="length" optional="hide"/>
                <field name="width" optional="hide"/>
                <field name="height" optional="hide"/>
                <field name="thickness" optional="hide"/>
                <field name="num_of_pieces" readonly="1" force_save="1"/>
                <field name="piece_size" optional="hide" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
    <record id="stone_production_product_template_search_view_inherit" model="ir.ui.view">
        <field name="name">stone.production.product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
                <field name="thickness"/>
                <separator/>
                <field name="item_type_id"/>
                <field name="color_id"/>
                <field name="pallet_id"/>
            </xpath>
            <xpath expr="//group" position="before">
                <separator/>
                <filter string="Stone Products" name="stone_products" domain="[('item_type_id','!=',False)]"/>
                <filter string="Non-Stone Products" name="non_stone_products" domain="[('item_type_id','=',False)]"/>
            </xpath>
            <xpath expr="//filter[@name='categ_id']" position="after">
                <separator/>
                <filter string="Item Type" name="stone_item_type" context="{'group_by':'item_type_id'}"/>
                <filter string="Item Color" name="stone_item_color" context="{'group_by':'color_id'}"/>
                <filter string="Item Product" name="stone_item_product" context="{'group_by':'source_id'}"/>
                <filter string="Item Pallet" name="stone_item_pallet" context="{'group_by':'pallet_id'}"/>
            </xpath>
        </field>
    </record>
    <record id="stone_production_product_template_action" model="ir.actions.act_window">
        <field name="name">Stone Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="domain">['|',('item_id','!=',False),('item_type_id','!=',False)]</field>
        <field name="context">{"search_default_filter_to_sell":1, "search_default_stone_item_type": 1}</field>
    </record>
    <menuitem id="stone_product_menu" name="Products"
              parent="stone_production.stone_item_menu_root"
              action="stone_production_product_template_action" sequence="2"/>
    <!--Purchase Related Changes-->
    <record id="stone_production_product_tree" model="ir.ui.view">
        <field name="name">stone.production.product.template.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Stone Production New Product" editable="bottom">
                <field name="generated_po_id" invisible="1"/>
                <field name="detailed_type" invisible="1"/>
                <field name="purchase_ok" invisible="1"/>
                <field name="item_type_id" required="1" options="{'no_create': 1, 'no_create_edit': 1}" optional="show"
                attrs="{'readonly':[('item_type_id', '=',%(stone_production.item_type_block)d)]}"/>
                <field name="color_id" required="1" options="{'no_create': 1, 'no_create_edit': 1}" optional="show"/>
                <field name="name" />
                <field name="source_id" required="1" options="{'no_create': 1, 'no_create_edit': 1}"
                       domain="[('purchase_source','=', True)]" optional="show"/>
                <field name="choice_id" required="1" optional="show" options="{'no_create': 1, 'no_create_edit': 1}"/>
                <field name="categ_id" optional="hide" options="{'no_create': 1, 'no_create_edit': 1}"/>
                <field name="uom_id" optional="hide" options="{'no_create': 1, 'no_create_edit': 1}"/>
                <field name="uom_po_id" optional="hide" options="{'no_create': 1, 'no_create_edit': 1}"/>
                <field name="remarks" optional="hide"/>
                <field name="pallet_id" optional="hide"
                       attrs="{'required':[('item_type_id', 'in',(%(stone_production.item_type_tile)d,%(stone_production.item_type_strip)d))]}"/>
                <field name="stone_size_eq" readonly="1" force_save="1" optional="hide"/>
                <field name="type_size_uom_id" readonly="1" force_save="1" optional="hide"/>
                <field name="length" required="1" optional="show"/>
                <field name="width" required="1" optional="show"/>
                <field name="height" attrs="{'required': [('item_type_id', '=', %(stone_production.item_type_block)d)]}" optional="show"/>
                <field name="thickness"  optional="hide"/>
                <field name="num_of_pieces" required="1" sum="num_of_pieces" optional="show"
                       attrs="{'readonly': [('item_type_id', '=', %(stone_production.item_type_block)d)]}"/>
                <field name="standard_price" sum="standard_price" optional="show"/>
                <field name="piece_size" sum="piece_size" optional="show"/>
                <field name="piece_cost" sum="piece_cost" optional="show"/>

                <field name="item_vendor_id" optional="hide"/>
                <field name="item_total_size" sum="item_total_size" optional="show"/>
                <field name="item_total_cost" sum="item_total_cost" optional="show"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="stone_production_new_product_action" model="ir.actions.act_window">
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_production.stone_production_product_tree"/>
    </record>
    <data noupdate="1">
        <record model="ir.actions.server" id="action_multi_product_create_item">
            <field name="name">Create Stone Item</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="code">
                if records:
                action = records.action_create_item()
            </field>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(4,ref('stone_production.group_stone_production_product_create_item'))]"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
        </record>
    </data>
</odoo>
