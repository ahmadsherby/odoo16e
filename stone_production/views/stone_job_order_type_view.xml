<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stone_job_order_type_form_view" model="ir.ui.view">
        <field name="name">stone.job.order.type.form.view</field>
        <field name="model">stone.job.order.type</field>
        <field name="arch" type="xml">
            <form string="Job Order Type">
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Item"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stone_job_order_type_tree_view" model="ir.ui.view">
        <field name="name">stone.job.order.type.tree.view</field>
        <field name="model">stone.job.order.type</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Job Order Type">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    <record id="stone_job_order_type_action" model="ir.actions.act_window">
        <field name="name">Job Order Type</field>
        <field name="res_model">stone.job.order.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stone_job_order_type_tree_view"/>
    </record>
    <menuitem id="stone_job_order_type_menu" name="Job Order Type"
              parent="stone_production.stone_production_config"
              action="stone_job_order_type_action" sequence="4"/>
</odoo>