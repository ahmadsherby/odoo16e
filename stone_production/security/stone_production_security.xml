<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_stone_production" model="ir.module.category">
            <field name="name">Stone Production</field>
            <field name="description">Helps you manage your stone production access for action on stone item,stone job order etc.</field>
            <field name="sequence">100</field>
        </record>
        <!--Item Action Groups-->
        <record id="group_stone_production_item_create_product" model="res.groups">
            <field name="name">Manage Item Create Product Actions</field>
            <field name="comment">This group will be able to create products from items</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_stone_production_item_cut_actions" model="res.groups">
            <field name="name">Manage Item Cut Actions</field>
            <field name="comment">This group will be able to start cut items</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_stone_production_item_cut_complete_actions" model="res.groups">
            <field name="name">Manage Item Cut Complete Actions</field>
            <field name="comment">This group will be able to set item as completed cutting</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <!--Order Action Groups-->
        <record id="group_stone_production_order_start_cut" model="res.groups">
            <field name="name">Manage Job Order Cut</field>
            <field name="comment">This group will be able to start cut job orders</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_stone_production_job_order_create_items" model="res.groups">
            <field name="name">Manage job order Create items Action</field>
            <field name="comment">This group will be able to create items from job order</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_stone_production_job_order_cut_actions" model="res.groups">
            <field name="name">Manage Job Order Cut Actions</field>
            <field name="comment">This group will be able to start cut job orders</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_stone_production_job_order_cut_complete_actions" model="res.groups">
            <field name="name">Manage Job order Cut Complete Actions</field>
            <field name="comment">This group will be able to set job order as completed cutting</field>
            <field name="category_id" ref="stone_production.module_category_stone_production"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>